
<div class="form-container">
  <div id="title">
    <h1>List your items:</h1>
    <img src="https://assets.fatllama.com/static/img/rebrand-assets/list-item/llama-with-pink.svg">
  </div>
  <%= simple_form_for @item do |f| %>
   <%= f.input  :category %>
   <%= f.input  :name %>
   <%= f.input  :price %>
   <%= f.input  :description %>
   <%= f.input  :picture %>
   <%= f.button :submit, "List Item", class: "btn btn-success" %>
  <% end %>
</div>

<div class="wrapper">
  <div class="cards">
    <% @items.each do |item| %>
      <%= link_to item_path(item.id) do %>
        <div class="product-card">
           <%= render 'shared/product_card', item: item %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>

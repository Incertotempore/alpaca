<div class="form-container">
<h4>You are renting:</h4>
<p><%= @item.name %></p>
<h4>From:</h4>
<p><%= @item.user.first_name %> <%= @item.user.last_name %></p>
<h4>For:</h4>
<p>&#8364;<%= @item.price %> / day</p>

<%= simple_form_for @deal do |f| %>
 <%= f.hidden_field :user_id, :value => current_user.id %>
 <%= f.hidden_field :item_id, :value => @item.id %>
 <%= f.input :date_start, as: :string, required: true, input_html: {class: "datepicker"} %>
  <%= f.input :date_end, as: :string, required: true, input_html: {class: "datepicker"} %>
 <%= f.button :submit, class: "btn btn-success" %>
<% end %>
</div>

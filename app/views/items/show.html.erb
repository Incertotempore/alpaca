
<div class="product">
  <div class="product-description">
    <h3><%= @item.name %></h3>
    <p><%= @item.category %></p>
    <p><%= @item.description %></p>
    <p><strong>&#8364;<%= @item.price %> / day</strong></p>

<% @item.reviews.each do |review| %>
  <p><%= review.creator || "no user assigned" %></p>
  <p><%= review.comment %></p>
  <p><%= review.rating %></p>
<% end %>

  </div>
  <div class="product-image">
  </div>
</div>
  <p class="rent-link"><%= link_to "Rent Item", deal_new_path(@item), class: "btn btn-warning btn-lg"%>
  <%= link_to "Go Back", items_path, class: "btn btn-warning btn-lg" %>
  <%= link_to "Add a review", new_item_review_path(@item), class: "btn btn-warning btn-lg" %>
  </p>

